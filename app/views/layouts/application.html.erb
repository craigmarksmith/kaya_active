<!DOCTYPE html>
<html lang="en">
<head>
  <%= render partial: 'shared/head' %>
</head>
<body>

  <!-- active admin wanted these -->
  <% if notice or alert %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  <% end %>
  <!--// active admin wanted these -->
  <div class="free-shipping">
    <i class="fa fa-truck"></i>
    FREE SHIPPING IN AUSTRALIA
  </div>
  <nav class="navbar navbar-default" role="navigation">
     <div class="container">
      <div class="navbar-header">
          <%= link_to image_tag('kaya_logo_plain.png', alt: 'Kaya Active Logo', class: 'navbar-brand'), root_path %>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav hidden-xs">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Shop <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="<%= products_path %>">View All</a></li>
                <li><a href="<%= category_products_path(category:'leggings') %>">Leggings</a></li>
                <li><a href="<%= category_products_path(category:'tops') %>">Tops</a></li>
                <li><a href="<%= category_products_path(category:'yoga-mats') %>">Yoga Mats</a></li>
                <li><a href="<%= category_products_path(category:'body-suits') %>">Body Suits</a></li>
                <li><a href="<%= category_products_path(category:'belts') %>">Belts</a></li>
              </ul>
          </li>
          <li><%= link_to "Contact Us", contact_path %></li>
        </ul>
        <div class="navbar-text navbar-right social">
          <a href="https://www.facebook.com/kayaactive" class="fa fa-facebook-square" target="_blank"></a>
          <a href="http://instagram.com/kayaactive" class="fa fa-instagram" target="_blank"></a>
          <a href="http://www.pinterest.com/kayaactive/" class="fa fa-pinterest-square" target="_blank"></a>
        </div>
      </div>
     </div>
  </nav>
  <% if category_page? %>
    <%= render partial: 'shared/mobile_category_menu' %>
  <% end %>

  <% if homepage? %>
    <%= yield %>
  <% else %>
    <div class="container">
      <%= yield %>
    </div>
  <% end %>


  <%= render partial: 'shared/footer' %>
  <%= render partial: 'shared/ga' %>

</body>
</html>