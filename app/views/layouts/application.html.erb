<!DOCTYPE html>
<html lang="en">
<head>
  <%= render partial: 'shared/head' %>
</head>
<body>

  <!-- active admin wanted these -->
  <% if notice or alert %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  <% end %>
  <!--// active admin wanted these -->

  <div class="header-logo">
    <%= link_to image_tag('kaya_logo.jpg', alt: 'Kaya Active Logo', class:'small-on-mobile'), root_path %>
  </div>
  <% if category_page? %>
    <%= render partial: 'shared/mobile_category_menu' %>
  <% end %>
  <nav class="navbar navbar-default <%= 'homepage' if homepage? %> hidden-xs" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav hidden-xs">
          <li><a href="<%= root_path %>"><span class="glyphicon glyphicon-home"></span> Home</a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Collection <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="<%= category_products_path(category:'leggings') %>">Leggings</a></li>
                <li><a href="<%= category_products_path(category:'tops') %>">Tops</a></li>
                <li><a href="<%= category_products_path(category:'yoga-mats') %>">Yoga Mats</a></li>
                <li><a href="<%= category_products_path(category:'body-suits') %>">Body Suits</a></li>
                <li><a href="<%= category_products_path(category:'belts') %>">Belts</a></li>
                <li><a href="<%= products_path %>">All Products</a></li>
              </ul>
          </li>
          <li><%= link_to "Contact Us", contact_path %></li>
        </ul>
      </div>
    </div>
  </nav>

    <% if homepage? %>
      <%= yield %>
    <% else %>
      <div class="container">
        <%= yield %>
      </div>
    <% end %>


  <%= render partial: 'shared/footer' %>
  <%= render partial: 'shared/ga' %>

</body>
</html>