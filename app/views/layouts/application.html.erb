<!DOCTYPE html>
<html lang="en">
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= content_for :title %>Brazilian Sports Wear | Kaya Active</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <!-- active admin wanted these -->
  <% if notice or alert %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  <% end %>
  <!--// active admin wanted these -->

  <div class="container">
    <nav class="navbar navbar-default" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
          <%= link_to "Kaya Active", root_path, class: "navbar-brand" %>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Collection <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="<%= products_path %>">All</a></li>
                  <li><a href="<%= category_products_path(category:'leggings') %>">Leggings</a></li>
                  <li><a href="<%= category_products_path(category:'body-suit') %>">Body Suits</a></li>
                  <li><a href="<%= category_products_path(category:'belts') %>">Belts</a></li>
                </ul>
            </li>
            <li><%= link_to "Contact Us", contact_path %></li>
          </ul>
        </div>
      </div>
    </nav>
    <%= yield %>
  </div>

