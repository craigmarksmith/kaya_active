<div class="section">
  <h4>Our Shop</h4>
  <%= render partial: 'shared/product_list', locals: {products: @products, split: 6} %>
  <p class="text-right"><%= link_to "Show more", category_products_path(category:'leggings') %></p>
</div>
<div class="section">
  <h4>Recent Articles</h4>
  <% @recent_articles.each_with_index do |post, index| %>
    <article>
      <%= link_to blog_post_path(post.slug) do %>
        <div class="row <%= 'last' if index == @recent_articles.size - 1 %>">
          <div class="col-md-3 col-xs-3">
            <%=
              cl_image_tag(
                post.banner_image_ref,
                fetch_format: :auto,
                quality: 100,
                height: 60,
                width: 60,
                crop: :fit,
                class: 'img-responsive',
                alt: post.title
              )
            %>
          </div>
          <div class="col-md-9 col-xs-9">
            <h5><%= post.title %></h5>
          </div>
        </div>
      <% end %>
    </article>
  <% end %>
</div>