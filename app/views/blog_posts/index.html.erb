<h1>#morethanbeautiful Blog</h1>

<div class="text-center">
  <% @posts.each do |post| %>
    <article>
      <%= link_to blog_post_path(post.slug) do %>
        <% if post.content.present? %>
          <%= image_tag("blog/#{post.slug}/#{post.slug}.png", class:'img-responsive') %>
        <% else %>
          <%=
            cl_image_tag(
              post.banner_image_ref,
              fetch_format: :auto,
              quality: 60,
              height: 800,
              width: 2000,
              mobile_height: 400,
              mobile_width: 1000,
              crop: :fit,
              class: 'img-responsive'
            )
          %>
        <% end %>
        <h2><%= post.title %></h2>
      <% end %>
    </article>
  <% end %>
</div>