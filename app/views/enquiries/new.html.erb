<%= simple_form_for @enquiry, html: {class: 'form-horizontal'}, defaults: { label_html: {class: 'col-md-4 control-label'}, input_html: { class: 'form-control input-m' } } do |f| %>
<fieldset>
<legend>Enquire about our products</legend>
<p>If you're interested in the <%= @enquiry.product.name %> or any of our products, just fill in the form including your emails address or phone number and we'll be in touch really soon.</p>
<%= f.error_notification %>

<%= f.hidden_field :product_id%>
<%= f.input :name %>
<%= f.input :email_address %>
<%= f.input :mobile_number %>
<%= f.input :message, input_html: {rows: 6, value: @enquiry.message} %>

<div class="form-group">
  <label class="col-md-4 control-label" for="singlebutton"></label>
  <div class="col-md-4">
    <%= f.button :submit, "Send Message" %>
    <!--<button id="singlebutton" name="singlebutton" class="btn btn-primary">Send message</button>-->
  </div>
</div>
</fieldset>
<% end %>
